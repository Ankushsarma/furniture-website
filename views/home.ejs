  <script>
    // Mobile Menu Toggle
    const mobileMenuBtn = document.getElementById('mobileMenuBtn');
    const mobileMenu = document.getElementById('mobileMenu');
    
    mobileMenuBtn.addEventListener('click', () => {
      mobileMenu.classList.toggle('active');
      mobileMenuBtn.textContent = mobileMenu.classList.contains('active') ? '✕' : '☰';
    });

    // Close mobile menu when clicking on links
    document.querySelectorAll('.mobile-menu a').forEach(link => {
      link.addEventListener('click', () => {
        mobileMenu.classList.remove('active');
        mobileMenuBtn.textContent = '☰';
      });
    });

    // Hero Carousel
    let currentSlide = 0;
    const slides = document.querySelectorAll('.hero-slide');
    
    function nextSlide() {
      slides[currentSlide].classList.remove('active');
      currentSlide = (currentSlide + 1) % slides.length;
      slides[currentSlide].classList.add('active');
    }
    
    setInterval(nextSlide, 4000);

    // Service Cards Auto Hover
    const serviceCards = document.querySelectorAll('.service-card');
    let autoHoverIndex = 0;
    
    function autoHover() {
      serviceCards.forEach(card => card.classList.remove('auto-hover'));
      serviceCards[autoHoverIndex].classList.add('auto-hover');
      autoHoverIndex = (autoHoverIndex + 1) % serviceCards.length;
    }
    
    setInterval(autoHover, 2500);
    
    serviceCards.forEach((card, index) => {
      const img = card.getAttribute('data-image');
      if (img) {
        // Create a unique style element for each card
        const beforeStyle = document.createElement('style');
        beforeStyle.innerHTML = `
          .services-grid .service-card:nth-child(${index + 1})::before { 
            background-image: url('${img}'); 
          }
        `;
        document.head.appendChild(beforeStyle);
      }
      
      card.addEventListener('mouseenter', () => {
        serviceCards.forEach(c => c.classList.remove('auto-hover'));
      });
    });

    // File Upload Display
    const fileInput = document.getElementById('designFile');
    const fileName = document.getElementById('fileName');
    
    fileInput.addEventListener('change', (e) => {
      if (e.target.files.length > 0) {
        fileName.textContent = `Selected: ${e.target.files[0].name}`;
      } else {
        fileName.textContent = '';
      }
    });

    // FAQ Accordion
    const faqItems = document.querySelectorAll('.faq-item');
    
    faqItems.forEach(item => {
      const question = item.querySelector('.faq-question');
      question.addEventListener('click', () => {
        const isOpen = item.classList.contains('open');
        faqItems.forEach(i => i.classList.remove('open'));
        if (!isOpen) {
          item.classList.add('open');
        }
      });
    });

    // Smooth Scroll
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function(e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
      });
    });
  </script>
